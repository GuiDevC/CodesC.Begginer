#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#include <string.h> 

void generatePassword(int lenght, int lower, int capital, int number, int symbol){
    const char capslock[] = "ABCDEFGHIJKLMNOPQRSTUVWXYZ";
    const char noShift[] = "abcdefghijklmnopqrstuvwxyz";
    const char numbers[] = "0123456789";
    const char specialSymbols[] = "!@#$%^&*()";

    char supportedChar[100] = "";

    if(lower == 1){
        strcat(supportedChar, capslock);
    }

    if(capital == 1){
        strcat(supportedChar, noShift);
    }

    if(number == 1){
        strcat(supportedChar, numbers);
    }

    if(symbol == 1){
        strcat(supportedChar, specialSymbols);
    }

    srand(time(0));

    for(int i = 0; i < lenght; i++){
        int index = rand() % strlen(supportedChar);
        printf("%c", supportedChar[index]);
    }
    printf("\n");
}
int main(void){
    int lower, capital, number, symbol;
    int lenght;

    printf("Welcome to generator password program in C! To enter your choices you enter 1(yes) or 2(no). \n");

    printf("What is the lenght of password? ");
    scanf("%d", &lenght);

    printf("You want lower case letters? ");
    scanf("%d", &lower);

    printf("You want capital letter? ");
    scanf("%d", &capital);

    printf("You want numbers? ");
    scanf("%d", &number);

    printf("You want special symbols? ");
    scanf("%d", &symbol);

    generatePassword(lenght, lower, capital, number, symbol);

    return 0;
}
