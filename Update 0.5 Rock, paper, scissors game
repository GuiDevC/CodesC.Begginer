#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int getBot(){
    return (rand() % 5) + 1;
}

int getUser(){
    int movement;
    do{
        printf("1. Rock\n");
        printf("2. Paper\n");
        printf("3. Scissor\n");
		printf("4. Lizard\n");
		printf("5. Spock\n");
        printf("What is your your movement? ");
        scanf("%d", &movement);
    }while(movement < 1 || movement > 5);

    return movement;
}

void winner(int user, int computer){
    
    if(user == computer){
        printf("Tie!");
    }
    else if(user == 1 && computer == 3){
        printf("You win! ");
    }
    else if(user == 1 && computer == 4){
        printf("You win! ");
    }
    else if(user == 2 && computer == 1){
        printf("You win! ");
    }
    else if(user == 2 && computer == 5){
        printf("You win! ");
    }
    else if(user == 3 && computer == 2){
        printf("You win! ");
    }
    else if(user == 3 && computer == 4){
        printf("You win! ");
    }
    else if (user == 4 && computer == 5){
        printf("You win! ");
    }
    else if (user == 4 && computer == 2){
        printf("You win! ");
    }
    else if(user == 5 && computer == 3){
        printf("You win! ");
    }
    else if (user == 5 && computer == 1){
        printf("You win! ");
    }
    else{
        printf("Bot wins! ");
    }

}

int main(void){

    srand(time(NULL));
    printf("Welcome to the Rock, Paper, Scissor Premium Game! \n");
    int bot = getBot(), user = getUser();

    printf("\nThe Match: ");
    switch(user){
        case 1:
            printf("\nYou choose Rock!");
            break;
        case 2:
            printf("\nYou choose Paper! ");
            break;
        case 3:
            printf("\nYou choose Scissor! ");
            break;
        case 4:
            printf("\nYou choose Lizard! \n");
            break;
        case 5:
            printf("\nYou choose Spock! \n");
            break;
    }

    switch(bot){
        case 1:
            printf("\nBot choose Rock! \n");
            break;
        case 2:
            printf("\nBot choose Paper! \n");
            break;
        case 3:
            printf("\nBot choose Scissor! \n");
            break;
        case 4:
            printf("Bot choose Lizard! \n");
            break;
        case 5:
            printf("Bot choose Spock! \n");
            break;
    }

    winner(user, bot);
}
